{
  "plugins": {
    "entries": {
      "moral-policy": {
        "enabled": true,
        "config": {
          "policyPath": "./policy/profiles/general-default.yaml",
          "auditLogPath": "~/.openclaw/logs/moral-policy.jsonl",
          "gatewayBaseUrl": "http://127.0.0.1:18789"
        }
      }
    }
  },

  "tools": {
    "allow": [
      "policy_invoke",
      "group:plugins"
    ],
    "deny": [
      "group:exec",
      "system.run",
      "nodes.run"
    ]
  }
}
